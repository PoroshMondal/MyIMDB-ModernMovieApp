<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyIMDB" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/grey_primary_500</item>
        <item name="colorPrimaryVariant">@color/grey_primary_dark_700</item>
        <item name="colorOnPrimary">@color/colorWhite</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_primary_light_200</item>
        <item name="colorSecondaryVariant">@color/grey_primary_dark_700</item>
        <item name="colorOnSecondary">@color/colorBlack</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <item name="windowActionBarOverlay">false</item>
    </style>

    <style name="Theme.MyIMDB" parent="Base.Theme.MyIMDB" />

    <style name="BubbleDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/bubble_up</item>
        <item name="android:windowExitAnimation">@anim/bubble_down</item>
    </style>

</resources>